<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.attaurrahman.pos.fragment.ForgetPasswordEmailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Forget Password"
            android:textColor="#00A0F1"
            android:textSize="40dp"/>

        <EditText
            android:id="@+id/et_forget_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:paddingLeft="30dp"
            android:background="@drawable/round_back_edittext"
            android:layout_marginTop="60dp"/>





        <Button
            android:id="@+id/btn_submit_forget_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/round_back_create_button"
            android:layout_marginTop="30dp"/>


    </LinearLayout>



</LinearLayout>
