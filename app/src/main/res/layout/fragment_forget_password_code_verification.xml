<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.attaurrahman.pos.fragment.ForgetPasswordCodeVerificationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Forget Password"
            android:textColor="#00A0F1"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code_num1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/squreline"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="#b4bfbf" />

            <EditText
                android:id="@+id/et_code_num2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/squreline"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="#b4bfbf" />

            <EditText
                android:id="@+id/et_code_num3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/squreline"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="#b4bfbf" />

            <EditText
                android:id="@+id/et_code_num4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/squreline"
                android:ems="10"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#b4bfbf" />

            <EditText
                android:id="@+id/et_code_num5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/squreline"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="#b4bfbf" />

            <EditText
                android:id="@+id/et_code_num6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/squreline"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:imeOptions="actionDone"
                android:textAlignment="center"
                android:textColor="#b4bfbf" />

        </LinearLayout>



        <Button
            android:id="@+id/btn_forget_password_verify_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/round_back_create_button"
            android:layout_marginTop="30dp"/>


    </LinearLayout>

</LinearLayout>
