<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.attaurrahman.pos.fragment.MyAccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="#A3DFE7">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="My Account"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Edit"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marcus Ryan"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#EEEEEE"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_marginLeft="20sp"
                android:background="#BDBDBD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="#EEEEEE"
                android:gravity="bottom"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:text="PHONE NUMBER"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:text="1876 555 5555"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#ffffff"
                    android:drawableRight="@drawable/right_small_arrow"
                    android:gravity="center_vertical"
                    android:text="Change"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_marginLeft="20sp"
                android:background="#BDBDBD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="#EEEEEE"
                android:gravity="bottom"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:text="MYNE ID"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:drawableRight="@drawable/blue_check"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:paddingRight="15sp"
                    android:text="MarcusR"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_marginLeft="20sp"
                android:background="#BDBDBD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="#EEEEEE"
                android:gravity="bottom"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:text="BALENCE"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:text="$ 25.21"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#ffffff"
                    android:drawableRight="@drawable/right_small_arrow"
                    android:gravity="center_vertical"
                    android:text="Recharge"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="#EEEEEE"
                android:gravity="bottom"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:text="CURRENT LOCATION"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_weight="0.6"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pakistan"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marcus Ryan"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="16dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:background="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_small_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="#EEEEEE"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="30sp"
            android:background="@drawable/round_back"
            android:text="DELETE ACCOUNT"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
